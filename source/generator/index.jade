doctype html
html
  head
    meta(charset="utf-8")
    meta(name="format-detection",content="telephone=no")
    meta(name="viewport",content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1,target-densitydpi=device-dpi")
    link(rel="stylesheet",href="jquery.mobile-1.4.2/jquery.mobile-1.4.2.min.css")
    link(rel="stylesheet",href="index.css")
    script(src="jquery.mobile-1.4.2/jquery-1.11.0.min.js")
    script(src="jquery.mobile-1.4.2/jquery.mobile-1.4.2.min.js")
body
  div(data-role="page")
    div(data-role="header")
      h1 GCT2014
    div.ui-content(data-role="main")
      ul.ui-listview-outer(data-role="listview")
        -for(var i in menu)
            li(data-role="collapsible",data-iconpos="right",data-shadow="false",data-corners="false")
              h2= menu[i].name
              -for(var j in menu[i].children)
                ul(data-role="listview",data-shadow="false",data-inset="true",data-corners="false")
                  li
                    a(href="#zhishidian_"+menu[i].children[j].tid,class="zhishidian",zhishidian=menu[i].children[j].tid)= menu[i].children[j].name

